@{
    Layout = "AuthLayout";
}
@section Header {
    Login
}
@model MvcWebAppProject.Models.User;

<form asp-controller="Login" asp-action="LoginUser" method="post">
    <div class="mb-3">
        <label asp-for="Username" class="form-label">Username</label>
        <input asp-for="Username" type="text" class="form-control" required>
    </div>
    <div class="mb-3">
        <label asp-for="PasswordHash" class="form-label">Password</label>
        <input asp-for="PasswordHash" type="password" class="form-control" required>
    </div>
    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">Login</button>
        @Html.ActionLink("Go to Register page", "Register", "Login", null, new { @class = "btn btn-warning" })
    </div>
</form>